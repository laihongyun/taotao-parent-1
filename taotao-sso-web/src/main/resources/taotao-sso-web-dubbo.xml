<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      				  http://www.springframework.org/schema/beans/spring-beans.xsd
      				  http://code.alibabatech.com/schema/dubbo
	    			  http://code.alibabatech.com/schema/dubbo/dubbo.xsd">


    <!-- ####### 分布式服务框架dubbo(引用服务  客户端) ######## -->
    <!-- 配置服务应用的名称 -->
    <dubbo:application name="taotao-sso-web"/>

    <!-- 使用zookeeper注册中心发现服务地址  -->
    <dubbo:registry protocol="zookeeper" address="192.168.40.145:2181"/>
    <!--
     声明需要引用的服务接口  (生成远程服务代理，可以和本地bean一样使用)
    	interface: 需要引用的服务接口
    	id: bean的id
    	timeout: 连接注册中心超时时长 60秒
    -->
    <dubbo:reference interface="com.taotao.sso.service.UserService" id="userService" timeout="60000"/>
</beans>
